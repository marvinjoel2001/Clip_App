<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/relojes_foreground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OpcionAlarmFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d000"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="monospace"
            android:text="ESTABLECER ALARMAS"
            android:gravity="center"
            android:textColor="#ccc"
            android:textSize="25dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_personalizada"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="PERSONALIZADA"
            android:textColor="@color/primary_text"
            app:backgroundTint="@color/accent"
            app:cornerRadius="16dp"
            android:elevation="2dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_automatica"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="207dp"
            android:layout_height="58dp"
            android:layout_marginTop="30dp"
            android:elevation="2dp"
            android:text="AUTOMATICA"
            android:textColor="@color/blanco"
            android:textSize="23dp"
            app:backgroundTint="@color/primary_dark"
            app:cornerRadius="16dp" />
    </LinearLayout>
</FrameLayout>